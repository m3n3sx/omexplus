# =============================================================================
# OMEX E-COMMERCE - PRODUCTION ENVIRONMENT CONFIGURATION
# =============================================================================
# Copy this file to .env and fill in your production values
# NEVER commit .env file to version control!

# =============================================================================
# CORE SETTINGS
# =============================================================================
NODE_ENV=production
MEDUSA_ADMIN_ONBOARDING_TYPE=nextjs
MEDUSA_ADMIN_ONBOARDING_NEXTJS_DIRECTORY=storefront

# URLs
MEDUSA_BACKEND_URL=https://api.ooxo.pl
NEXT_PUBLIC_MEDUSA_BACKEND_URL=https://api.ooxo.pl
NEXT_PUBLIC_STORE_URL=https://ooxo.pl

# CORS Settings (comma-separated)
STORE_CORS=https://ooxo.pl,https://www.ooxo.pl,https://sklep.ooxo.pl
ADMIN_CORS=https://admin.ooxo.pl,https://ooxo.pl
AUTH_CORS=https://ooxo.pl,https://www.ooxo.pl,https://admin.ooxo.pl

# =============================================================================
# DATABASE
# =============================================================================
DATABASE_URL=postgres://user:password@localhost:5432/medusa_db
REDIS_URL=redis://localhost:6379

# =============================================================================
# SECURITY (Generate new secrets for production!)
# =============================================================================
# Generate with: openssl rand -hex 32
JWT_SECRET=your_jwt_secret_here_min_32_chars
COOKIE_SECRET=your_cookie_secret_here_min_32_chars

# =============================================================================
# MEDUSA API KEYS
# =============================================================================
# Get from Medusa Admin -> Settings -> API Keys
NEXT_PUBLIC_MEDUSA_PUBLISHABLE_KEY=pk_your_publishable_key

# =============================================================================
# TPAY PAYMENT GATEWAY (Poland) - OpenAPI
# =============================================================================
# Get credentials from: https://panel.tpay.com/ -> Integracja -> OpenAPI
TPAY_CLIENT_ID=your_client_id
TPAY_CLIENT_SECRET=your_client_secret
TPAY_SANDBOX=false

# =============================================================================
# STRIPE PAYMENT GATEWAY (International)
# =============================================================================
# Get from: https://dashboard.stripe.com/apikeys
STRIPE_SECRET_KEY=sk_live_your_secret_key
STRIPE_PUBLISHABLE_KEY=pk_live_your_publishable_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret
STRIPE_API_VERSION=2023-10-16

# =============================================================================
# INPOST SHIPPING (Poland)
# =============================================================================
# Get from: https://manager.paczkomaty.pl/
INPOST_API_KEY=your_inpost_api_key
INPOST_API_SECRET=your_inpost_api_secret
INPOST_ORG_ID=your_organization_id

# =============================================================================
# DPD SHIPPING (Europe)
# =============================================================================
# Get from: https://www.dpd.com.pl/
DPD_API_KEY=your_dpd_api_key
DPD_LOGIN=your_dpd_login
DPD_PASSWORD=your_dpd_password

# =============================================================================
# DHL SHIPPING (International)
# =============================================================================
# Get from: https://developer.dhl.com/
DHL_API_KEY=your_dhl_api_key
DHL_ACCOUNT_NUMBER=your_dhl_account_number

# =============================================================================
# WAREHOUSE ADDRESS (for shipping origin)
# =============================================================================
WAREHOUSE_STREET=ul. Gnieźnieńska 19
WAREHOUSE_CITY=Września
WAREHOUSE_POSTAL_CODE=62-300
WAREHOUSE_COUNTRY=PL
WAREHOUSE_PHONE=+48500169060
WAREHOUSE_EMAIL=omexplus@gmail.com

# =============================================================================
# FREE SHIPPING THRESHOLD (in PLN)
# =============================================================================
FREE_SHIPPING_THRESHOLD=500

# =============================================================================
# GOOGLE OAUTH
# =============================================================================
# Get from: https://console.cloud.google.com/
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
NEXT_PUBLIC_GOOGLE_CLIENT_ID=your_google_client_id

# =============================================================================
# GEMINI AI (for chat assistant)
# =============================================================================
# Get from: https://makersuite.google.com/app/apikey
GEMINI_API_KEY=your_gemini_api_key

# =============================================================================
# MATRIX CHAT (optional - for live support)
# =============================================================================
MATRIX_HOMESERVER_URL=https://chat.ooxo.pl
MATRIX_ACCESS_TOKEN=your_matrix_access_token
MATRIX_USER_ID=@chatbot:ooxo.pl
MATRIX_DEFAULT_AGENTS=@agent1:ooxo.pl,@agent2:ooxo.pl

# =============================================================================
# GOOGLE ANALYTICS & ADS
# =============================================================================
NEXT_PUBLIC_GA_MEASUREMENT_ID=G-XXXXXXXXXX
NEXT_PUBLIC_GOOGLE_ADS_ID=AW-XXXXXXXXX
NEXT_PUBLIC_GTM_ID=GTM-XXXXXXX

# =============================================================================
# EMAIL (SMTP)
# =============================================================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password
SMTP_FROM=OMEX <noreply@ooxo.pl>

# =============================================================================
# SENTRY (Error Tracking - optional)
# =============================================================================
SENTRY_DSN=https://your_sentry_dsn
NEXT_PUBLIC_SENTRY_DSN=https://your_sentry_dsn
